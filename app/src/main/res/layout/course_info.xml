<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:orientation="vertical" android:padding="6dip">

    <TextView android:id="@+id/course_code" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" android:text="code"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView android:id="@+id/textView2" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/course_code" android:text=" | "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView android:id="@+id/course_title" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView2" android:text="title"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView android:id="@+id/textView3" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/course_title" android:text=" | "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView android:id="@+id/course_time" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/course_code"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView android:id="@+id/textView4" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignParentLeft="true"
        android:layout_below="@+id/course_time" android:text="Set: "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView android:id="@+id/course_set" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4" android:layout_toRightOf="@+id/textView4"
        android:text="set_no" android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView android:id="@+id/textView6" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView android:id="@+id/course_room" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="room_no"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/course_set"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

    <!--<TextView android:id="@+id/continent" android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content" android:layout_alignBaseline="@+id/textView4"-->
    <!--android:layout_alignBottom="@+id/textView4" android:layout_toRightOf="@+id/course_set"-->
    <!--android:text="Medium Text" android:textAppearance="?android:attr/textAppearanceMedium" />-->

</RelativeLayout>